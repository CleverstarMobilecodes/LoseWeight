    <Switch
        android:id="@+id/settings_screen_item_toggleSwtich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" 
        android:layout_marginRight="12dp"/>
 	 -->
    

    
</RelativeLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/SLIDE_MENU_TITLE_COLOR"
        android:text="The induction is the relaxing portion at the beginning designed to help you enter a hypnotic trance."
        android:layout_marginLeft="20dp"
        android:layout_marginRight="12dp"   
        android:layout_marginTop="6dp" 		/>
    
</LinearLayout>


